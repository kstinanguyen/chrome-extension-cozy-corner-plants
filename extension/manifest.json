{
  "manifest_version": 3,
  "name": "Cozy Corner Plants",
  "version": "1.0.0",
  "description": "Cozy Corner Plants is a Google Chrome Extension that brings the joys of indoor plants to a cozy corner of a user's browser.",
  "action": {
    "default_popup": "index.html",
    "popup_height": 400,
    "popup_width": 300
  },
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*.svg"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": [
    "https://cozy-corner-plants-backend.onrender.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}

